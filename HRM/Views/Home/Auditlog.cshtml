@model IEnumerable<HRM.Models.AuditLog>

@{
    ViewBag.Title = "Auditlog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Audit Logs</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LogDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Action)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModuleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubModuleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActionFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActionMessage)
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LogDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Action)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModuleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubModuleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActionFrom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActionMessage)
        </td>       
    </tr>
}

</table>
